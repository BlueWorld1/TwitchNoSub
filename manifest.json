{
    "name": "TwitchNoSub",
    "version": "0.6.2",
    "description": "Show sub only VOD on Twitch",
    "manifest_version": 3,
    "icons": {
        "128": "assets/icons/icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/amazon-ivs-wasmworker.min.js",
                "src/amazon-ivs-wasmworker.min.wasm"
            ],
            "matches": [
                "https://www.twitch.tv/*"
            ]
        }
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "host_permissions": [
        "https://www.twitch.tv/*",
        "https://static.twitchcdn.net/assets/*"
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "webRequest",
        "webNavigation",
        "declarativeNetRequest"
    ]
}